{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ES2017",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/typings",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "module": "ESNext",
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
